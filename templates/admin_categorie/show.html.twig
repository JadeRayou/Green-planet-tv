{% extends 'base-backend.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
    <a href="{{ path('app_admin_categorie_index') }}" class="btn btn-dark mb-3"><i class="align-middle" data-feather="arrow-left-circle"></i></a>
    <div class="d-flex flex-wrap justify-content-between align-items-center">
        <h1>Catégories</h1>
        {{ include('admin_categorie/_delete_form.html.twig') }}
    </div>

    <table class="table table-secondary table-striped">
        <tbody>
            <tr>
                <th class="table-light">Id</th>
                <td>{{ categorie.id }}</td>
            </tr>
            <tr>
                <th class="table-light">Nom</th>
                <td>{{ categorie.nom }}</td>
            </tr>
            <tr>
                <th class="table-light">Slug</th>
                <td>{{ categorie.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_categorie_edit', {'id': categorie.id}) }}" class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a>
{% endblock %}
